<%- include('partials/_header') %> %>

  <div class="text-center">

    <p class="display-4">JAUSSERS CRM</p>
    <p class="display-6">MODULO RESERVAS</p>
    <button class="btn btn-info"><a class="text-decoration-none text-white" href="/" >Inicio</a></button>
    <button class="btn btn-info"><a class="text-decoration-none text-white" href="/new-booking" >Nueva Reserva</a></button>

  </div>
    
  <div class="">

    <div class="d-flex justify-content-center mt-lg-4">
  
      <form action="/newBooking" method="post" class="card text-center col-lg-5 p-5">
  
        <div class="d-block">
          <label for="propiedad">Apartamento</label>
          <select name="propiedad" required>
            <option value="409">Ciudad Jardin</option>
            <option value="306A">Granadillo</option>
            <option value="501A">La Campiña</option>
            <option value="510S">510 Suite</option>
            <option value="510C">510 Completo</option>
            <option value="702S">702 Suite</option>
            <option value="702C">702 Completo</option>
          </select>
        </div>
  
        <div class="d-block">
          <label for="nombreHuesped">Nombre del Huésped</label>
          <input name="nombreHuesped" required>
        </div>
  
        <div class="d-block">
          <label for="pax"># Huespedes</label>
          <select name="pax" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
          </select>
        </div>
  
        <div class="d-block">
          <label for="checkIn">Check-In</label>
          <input name="checkIn" type="date" required>
        </div>
  
        <div class="d-block">
          <label for="checkOut">Check-Out</label>
          <input name="checkOut" type="date" required>
        </div>
  
        <div class="d-block">
          <label for="channel">Canal</label>
          <select name="channel" required>
            <option value="direkto">Direkto</option>
            <option value="airbnb">AirBnB</option>
          </select>
        </div>
  
        <div class="d-block">
          <label for="totalReserva">Total a Pagar</label>
          <input name="totalReserva" required>
        </div>
  
        <div class="d-block">
          <label for="status">Status Reserva</label>
          <select name="status" required>
            <option value="409">Reservada</option>
            <option value="501A">Hospedada</option>
            <option value="306A">Cancelada</option>
          </select>
        </div>
  
  
        <button type="submit" class="btn btn-info text-white">Añadir Reserva</button>
      </form>
      
    </div>

  </div>
  

  
</body>
</html> 