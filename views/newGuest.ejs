<%- include('partials/_header') %> %>

  <div class="text-center">

    <p class="display-4">JAUSSERS CRM</p>
    <p class="display-6">REGISTRO DE HUESPEDES</p>
    <button><a href="/new-guest" >Nuevo Huésped</a></button>
    <button><a href="/registro" >Añadir Reserva</a></button>

  </div>

  <div class="d-flex justify-content-center mt-4">
    <div class="card d-flex col-4 p-4">

      <form class="text-center" action="/new-guest" method="post">
  
        <div class="d-block">
          <label for="nombres">Nombres</label>
          <input name="nombres" required> 
        </div>
        
        <div class="d-block">
          <label>Apellidos</label>
          <input name="apellidos" required> 
        </div>
  
        <div class="d-block"></div>
        <label for="genero">Género</label>
        <input name="genero" type="checkbox">M</input> 
        <input name="genero" type="checkbox">F</input> 
  
  
        <div class="d-block">
          <label for="tipoDocumento">Tipo de Documento</label>
          <select name="tipoDocumento">
            <option value="cc">Cédula de Ciudadanía</option>
            <option value="ce">Cédula de Extranjería</option>
            <option value="pa">Pasaporte</option>
          </select>
        </div>
  
        <div class="d-block">
          <label for="numDocumento">Nro de Documento</label>
          <input name="numDocumento" required> 
        </div>
  
        <div class="d-block">
          <label for="fechaNacimiento">Fecha de Nacimiento</label>
          <input name="fechaNacimiento" required type="date"> 
        </div>
  
        <div class="d-block">
          <label for="paisNacimiento">País de Nacimiento</label>
          <input name="paisNacimiento" required> 
        </div>
  
        <div class="d-block">
          <label for="telefono">Teléfono</label>
          <input name="telefono" required> 
        </div>

        <div class="d-block">
          <label for="email">Correo Electrónico</label>
          <input name="email" required> 
        </div>

        <button type="submit">Añadir Huésped</button>
  
  
  
  
  
  
  
  
      </form>
    </div>
  </div>
  
</body>
</html>